@model List<Cricket.Models.Knockouts>
<div class="alert alert-primary text-center" role="alert">
    @{
        if (ViewData["defaultLeagueName"] != null)
        {
            <strong>@ViewData["defaultLeagueName"].ToString()</strong>
        }
    }
</div>
@{
    if (Model.Count == 0)
    {
        <div class="alert alert-danger text-center" role="alert">
            <strong>Knockouts not available</strong>
        </div>
    }
}
<div class="row">
    @{
        foreach (var obj in Model)
        {
            if (string.IsNullOrEmpty(obj.PlayersMaster.FileName))
            {
                obj.PlayersMaster.FileName = "user.png";
            }
            <div class="col-lg-4 col-12">
                <div class="card mb-4">
                    <h4 class="card-header text-center">Knockout @obj.Number</h4>

                    @*<div class="container">*@
                    <div class="row ">
                        <div class="col-6">
                            <img class="card-img-top img-fluid"
                                 src="~/Uploads/Players/@obj.PlayersMaster.FileName"
                                 alt="knownas" />
                        </div>
                        <div class="col-6">
                            <img class="card-img-top img-fluid"
                                 src="~/Uploads/Players/@obj.PlayersMaster1.FileName"
                                 alt="knownas" />
                        </div>
                    </div>
                    @*</div>*@


                    <div class="card-body p-1">
                        <h6 class="card-title text-center mt-2 text-truncate">
                            <span class="flag-icon flag-icon-@obj.PlayersMaster.Country"></span>
                            @obj.PlayersMaster.Name V <span class="flag-icon flag-icon-@obj.PlayersMaster1.Country"></span>
                            @obj.PlayersMaster1.Name
                        </h6>
                    </div>


                    <ul class="list-group text-center">
                        <li class="list-group-item">
                            <strong class="text-info">@obj.Stage</strong>
                        </li>
                    </ul>



                    <div class="card-footer text-muted text-center text-truncate">
                        @{
                            if (obj.WinnerID.HasValue)
                            {
                                <strong class="text-success"><i class="fas fa-trophy"></i>&nbsp;@obj.PlayersMaster2.Name</strong>
                            }
                            else
                            {
                                <strong class="text-danger">TBA</strong>
                            }

                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

