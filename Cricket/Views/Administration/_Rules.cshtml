@model List<Cricket.Models.LeaguesRulesMaster>
<div class="form-group form-group-sm">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
        <table data-index="1" class="table table-hover table-striped">
            <tbody>
                @{
                    if (Model != null)
                    {
                        foreach (Cricket.Models.LeaguesRulesMaster rule in Model)
                        {
                            <tr data-id="@rule.RecordID">
                                <td class="hidden-print" style="width: 5%">
                                    <div class="checkbox c-checkbox mt0 mb0">
                                        <label>
                                            <input class="rule-check" type="checkbox">
                                            <span class="fa fa-check"></span>
                                        </label>
                                    </div>
                                </td>
                                <td>
                                    @rule.Rule
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
