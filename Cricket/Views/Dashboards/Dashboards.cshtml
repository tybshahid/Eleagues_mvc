                    $('#ViewDataDiv').html(result);
                }
            });

            $('a.list-group-item,#listFilter li').removeClass('active');
            $(this).addClass('active');
        });

        $("#linkViewGames").on('click', function () {

            $.ajax({
                type: 'post',
                url: '@Url.Content("~/Dashboards/ViewGames")',
                data: {
                    __RequestVerificationToken: gettoken()
                },
                success: function (result) {
                    $('#ViewDataDiv').html(result);
                }
            });

            $('a.list-group-item,#listFilter li').removeClass('active');
            $(this).addClass('active');
        });

        $("#linkViewLeaderboard").on('click', function () {

            $.ajax({
                type: 'post',
                url: '@Url.Content("~/Dashboards/ViewLeaderboard")',
                data: {
                    __RequestVerificationToken: gettoken()
                },
                success: function (result) {
                    $('#ViewDataDiv').html(result);
                }
            });

            $('a.list-group-item,#listFilter li').removeClass('active');
            $(this).addClass('active');
        });

    });
</script>
